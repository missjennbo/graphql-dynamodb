[Unit]
Description=mongodb-graphql
After=network.target

[Service]
ExecStart=/usr/bin/node /home/ubuntu/mongodb-graphql/src/server/server.js
Restart=always
RestartSec=500ms
StartLimitInterval=0
User=nobody
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/home/ubuntu/mongodb-graphql

[Install]
WantedBy=multi-use.target